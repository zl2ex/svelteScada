{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run vite",
      "runtimeExecutable": "vite",
      "cwd": "${workspaceFolder}",
      "args": []
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/server/index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "chrome", // or "msedge" for Edge
      "request": "launch",
      "name": "Debug Vite App",
      "url": "http://localhost:5173", // Adjust if your Vite server uses a different port
      "preLaunchTask": "npm run build",
      "webRoot": "${workspaceFolder}/src/server/index.ts", // Adjust if your source files are in a different directory
      "sourceMaps": true,
      "runtimeArgs": ["--remote-debugging-port=9222"]
    }
  ]
}
